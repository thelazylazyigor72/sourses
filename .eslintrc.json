{
    "env": {
        "browser": true,
        "es2021": true
        //"jest": true cuz so far im not into jest, but 4 future here it is
    },
    "extends": [
        //"react-app", //for creacte react app
        //"react-app/jest",//for jest
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "max-len": "warn",
        "react/function-component-definition": "off"
    }
}
